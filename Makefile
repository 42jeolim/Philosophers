SRCS		=	./src/main.c \
				./src/init.c \
				./src/utils.c \
				./src/philo.c

OBJS		=	$(SRCS:.c=.o)

NAME		=	philo
CC			=	cc
FLAGS		=	-Wall -Werror -Wextra
INCLUDE		=	./src/philo.h
RM			= rm -f

YELLOW=\033[1;33m
NC=\033[0m
GREEN=\033[0;32m
PURPLE=\033[0;35m

all			:	$(NAME)

${NAME} : ${OBJS}
	@$(CC) $(OBJS) $(FLAGS) -o $(NAME)
	@echo "‚≠êÔ∏è ${YELLOW}$(NAME) created ‚≠êÔ∏è${NC}"


%.o:%.c ${INCLUDES}
	@${CC} ${FLAGS} -o $@ -c $<
	@echo "${GREEN}$@ created ‚úÖ${NC}"

clean		:
		$(RM) ./src/*.o
		@echo "üëæ ${PURPLE}only object files deleted  üëæ${NC}"

fclean		:	clean
		$(RM) $(NAME)
		@echo "üëæ ${PURPLE} all files deleted  üëæ${NC}"

re	:
	make fclean 
	make all

.PHONY	:	all clean fclean re